{
  "name": "devly/wp-cpt",
  "description": "A helper library for creating WordPress custom post types an taxonomies in a OOP way.",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Valentin Jebelev",
      "homepage": "https://github.com/valenjeb"
    }
  ],
  "autoload": {
    "psr-4": {
      "Devly\\WP\\": "src"
    }
  },
  "require": {
    "php": "^7.4",
    "devly/utils": "dev-master"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.2",
    "devly/coding-standard": "^1.0",
    "php-stubs/wordpress-tests-stubs": "^5.8",
    "phpstan/phpstan": "^1.9",
    "phpunit/phpunit": "^9.5",
    "szepeviktor/phpstan-wordpress": "^1.1",
    "wp-cli/i18n-command": "^2.4",
    "wptrt/wpthemereview": "^0.2.1",
    "yoast/phpunit-polyfills": "^1.0"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
